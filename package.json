{
  "name": "iobroker.pisignage",
  "version": "0.0.1",
  "description": "Remote Control a PiSignage Player",
  "author": {
    "name": "solunix",
    "email": "github@solunix.de"
  },
  "homepage": "https://github.com/solunix/ioBroker.pisignage",
  "license": "MIT",
  "keywords": [
    "PiSignage",
    "Signage",
    "API"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/solunix/ioBroker.pisignage.git"
  },
  "engines": {
    "node": ">= 14"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.0.4"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.6.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.6.0",
    "@alcalzone/release-script-plugin-license": "^3.5.9",
    "@alcalzone/release-script-plugin-manual-review": "^3.5.9",
    "@iobroker/adapter-dev": "^1.2.0",
    "@iobroker/testing": "^4.1.0",
    "@tsconfig/node14": "^14.1.0",
    "@types/chai": "^4.3.7",
    "@types/chai-as-promised": "^7.1.6",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.8.10",
    "@types/proxyquire": "^1.3.29",
    "@types/sinon": "^10.0.19",
    "@types/sinon-chai": "^3.2.10",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.51.0",
    "mocha": "^9.2.2",
    "proxyquire": "^2.1.3",
    "rimraf": "^5.0.5",
    "sinon-chai": "^3.7.0",
    "sinon": "^13.0.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "~4.6.4"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/solunix/ioBroker.pisignage/issues"
  },
  "readmeFilename": "README.md"
}
